{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.py"
    },
    {
      "src": "/templates.json",
      "dest": "/templates.json"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}